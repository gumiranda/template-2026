{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "env:dev": "node -e \"const fs=require('fs');fs.copyFileSync('apps/web/.env.dev','apps/web/.env.local');fs.copyFileSync('packages/backend/.env.dev','packages/backend/.env.local');console.log('Ambiente DEV configurado!')\"",
    "env:prod": "node -e \"const fs=require('fs');fs.copyFileSync('apps/web/.env.prod','apps/web/.env.local');fs.copyFileSync('packages/backend/.env.prod','packages/backend/.env.local');console.log('Ambiente PROD configurado!')\"",
    "dev:local": "pnpm env:dev && turbo dev",
    "dev:prod": "pnpm env:prod && turbo dev",
    "backend:dev": "pnpm --filter @workspace/backend dev:env-dev",
    "backend:prod": "pnpm --filter @workspace/backend dev:env-prod"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=20"
  }
}
